<launch>
  <node pkg="joy" exec="joy_node">
    <param from="$(find-pkg-share osp_teleop)/config/osp_teleop.yaml" />
  </node>

  <node name="robot_state_publisher" pkg="robot_state_publisher" exec="robot_state_publisher">
    <param name="robot_description" value="$(command 'cat $(find-pkg-share osp_rviz)/urdf/osp_rviz.urdf')"/>
