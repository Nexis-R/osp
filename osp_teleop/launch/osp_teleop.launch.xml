  </node>

    <node name="Flipper_angle" pkg="osp_rviz" exec="osp_rviz">
    <param from="$(find-pkg-share osp_teleop)/config/osp_teleop.yaml"/>
  </node>

  <node name="rviz2" pkg="rviz2" exec="rviz2">
  </node>
</launch>